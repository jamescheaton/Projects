<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.VisitorPageController">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <Text text="Atlanta Zoo" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Button onAction="#handleSearchExhibitsButtonAction" text="Search Exhibits" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <Button onAction="#handleViewExhibitHistoryButtonAction" text="View Exhibit History" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Button onAction="#handleSearchShowsButtonAction" text="Search Shows" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <Button onAction="#handleViewShowHistoryButtonAction" text="View Show History" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Button onAction="#handleSearchAnimalsButtonAction" text="Search for Animals" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <Button onAction="#handleLogoutButtonAction" text="Logout" GridPane.columnIndex="1" GridPane.rowIndex="3" />



</GridPane>
