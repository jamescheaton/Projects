    <TextView
        android:id="@+id/email_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_alert_when"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="400dp"
        android:text="Email Notification"
        android:textSize = "20sp"/>

    <Switch
        android:id="@+id/push_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_toolbar"
        android:layout_marginStart="300dp"
        android:layout_marginTop="250dp"
        android:layout_toEndOf="@+id/textView2" />

    <Switch
        android:id="@+id/call_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_toolbar"
        android:layout_marginStart="300dp"
        android:layout_marginTop="300dp"
        android:layout_toEndOf="@+id/textView2" />

    <Switch
        android:id="@+id/text_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_toolbar"
        android:layout_marginStart="300dp"
        android:layout_marginTop="350dp"
        android:layout_toEndOf="@+id/textView2" />

    <Switch
        android:id="@+id/email_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_toolbar"
        android:layout_marginStart="300dp"
        android:layout_marginTop="400dp"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/select_on_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/alert_address"
        android:layout_marginStart="200dp"
        android:layout_marginTop = "130dp"
        android:layout_toEndOf="@+id/alert_address"
        android:text="Select on Map" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="500dp"
        android:text="Save New Alert" />


</FrameLayout>